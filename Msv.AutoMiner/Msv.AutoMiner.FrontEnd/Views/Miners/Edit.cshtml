@model Msv.AutoMiner.FrontEnd.Models.Miners.MinerBaseModel

@{ ViewBag.Title = "Edit miner details"; }  

<h2 class="text-center">Edit miner details</h2>

<div class="text-danger" asp-validation-summary="All"></div>

<form asp-action="Save" method="post">
    <input asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control" placeholder="For example, ccminer" />
    </div>
    <p class="small">
        To upload and configure miner versions, use appropriate actions on the Miners page.
    </p>

    <button type="submit" class="btn btn-success">
        <i class="glyphicon glyphicon-floppy-disk"></i> Save
    </button>
    <a class="btn btn-default" asp-action="Index">
        <i class="glyphicon glyphicon-chevron-left"></i> Return to miners list
    </a>
</form>