@using Msv.AutoMiner.Common.Enums
@using Msv.AutoMiner.FrontEnd.Models.Algorithms
@model AlgorithmDisplayModel

<tr data-algorithm-name="@Model.Name">
    <td>@Model.Name</td>
    <td class="text-monospace">@Model.Id</td>
    <td>@Model.MinerName</td>
    <td class="text-monospace">@Model.MinerAlgorithmArgument</td>
    <td>
        <ul class="list-inline">
            <li>
                <a class="btn btn-xs btn-primary" asp-action="Edit" asp-route-id="@Model.Id" title="Edit algorithm">
                    <i class="glyphicon glyphicon-edit"></i>
                </a>
            </li>
            <li>
                <a class="btn btn-xs btn-info" asp-action="Export" asp-route-id="@Model.Id"
                   title="Export algorithm data to JSON file">
                    <i class="fa fa-upload" aria-hidden="true"></i>
                </a>
            </li>
            @if (Model.KnownValue != KnownCoinAlgorithm.Sha256D)
            {
                <li>
                    <button class="btn btn-xs btn-danger"
                            title="Delete algorithm"
                            data-delete-url="@Url.Action("Delete", new {id = Model.Id})">
                        <i class="glyphicon glyphicon-trash"></i>
                    </button>
                </li>
            }
        </ul>
    </td>
</tr>