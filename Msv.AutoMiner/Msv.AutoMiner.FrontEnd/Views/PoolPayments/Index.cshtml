@using Msv.AutoMiner.Common.Enums
@using Msv.AutoMiner.Common.Helpers
@using Msv.AutoMiner.FrontEnd.Models.PoolPayments
@using Msv.AutoMiner.FrontEnd.Models.Shared
@model PaginationModel<PoolPaymentModel>

@{
    ViewBag.Title = "Pool payments";

    var paymentTypes = EnumHelper.GetCaptions<PoolPaymentType>();
}    

<h2 class="text-center">@Model.Title</h2>

@await Component.InvokeAsync("Pagination", Model)

<table class="table table-bordered table-striped sticky-header">
    <thead>
    <tr>
        <th>ID</th>
        <th>Currency</th>
        <th>Pool</th>
        <th>Type</th>
        <th>Date</th>
        <th>Amount</th>
        <th>Data</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var payment in Model.CurrentPageItems)
    {
        <tr>
            <td>@payment.Id</td>
            <td class="space-no-wrap">
                @await Component.InvokeAsync("LogoCoinName", new LogoCoinNameModel(payment.CurrencyName, payment.CurrencyLogo))
            </td>
            <td>@payment.PoolName</td>
            <td>@paymentTypes[payment.Type]</td>
            <td msv-absolute-date="@payment.DateTime"></td>
            <td class="space-no-wrap" msv-amount="@payment.Amount" msv-currency="@payment.CurrencySymbol"></td>
            <td>
                <table class="transaction-details">
                    @if (payment.Transaction != null)
                    {
                        <tr>
                            <th>Tx:</th>
                            <td>@await Component.InvokeAsync("LongId", new LongIdModel(payment.Transaction))</td>
                        </tr>
                    }
                    @if (payment.BlockHash != null)
                    {
                        <tr>
                            <th>Block:</th>
                            <td>@await Component.InvokeAsync("LongId", new LongIdModel(payment.BlockHash))</td>
                        </tr>
                    }
                    @if (payment.Address != null)
                    {
                        <tr>
                            <th>Wallet:</th>
                            <td>@await Component.InvokeAsync("LongId", new LongIdModel(payment.Address))</td>
                        </tr>
                    }  
                </table>
            </td>
        </tr>
    }
    </tbody>
</table>

@await Component.InvokeAsync("Pagination", Model)