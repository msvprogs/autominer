@using Msv.AutoMiner.Common.Enums
@using Msv.AutoMiner.Common.Helpers
@model Msv.AutoMiner.FrontEnd.Models.Rigs.RigEditModel

@{
    ViewBag.Title = "Edit rig details";
    var aggregationTypes = EnumHelper.GetCaptionsCached<ValueAggregationType>();
}

<h2 class="text-center">Edit rig details</h2>

<div class="text-danger" asp-validation-summary="All"></div>

<form asp-action="Save" method="post">
    <input asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DifficultyAggregationType">Difficulty calculation mode:</label>
        <select asp-for="DifficultyAggregationType" class="form-control">
            @foreach (var aggregationType in aggregationTypes)
            {
                <option value="@aggregationType.Key">@aggregationType.Value</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="PriceAggregationType">Market price calculation mode:</label>
        <select asp-for="PriceAggregationType" class="form-control">
            @foreach (var aggregationType in aggregationTypes)
            {
                <option value="@aggregationType.Key">@aggregationType.Value</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success">
        <i class="glyphicon glyphicon-floppy-disk"></i> Save
    </button>
    <a class="btn btn-default" asp-action="Index">
        <i class="glyphicon glyphicon-chevron-left"></i> Return to rigs list
    </a>
</form>