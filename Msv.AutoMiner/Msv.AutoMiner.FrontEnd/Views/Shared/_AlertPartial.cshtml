<div class="modal fade" id="alertDialog">
    <div class="modal-dialog modal-middle" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <span class="modal-title modal-title-large" id="alertDialogTitle"></span>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-3 alert-icon">
                        <i id="alertDialogIcon" aria-hidden="true"></i>
                    </div>
                    <div class="col-xs-9" id="alertDialogBody"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" id="alertDialogOkButton">OK</button>
            </div>
        </div>
    </div>
</div>