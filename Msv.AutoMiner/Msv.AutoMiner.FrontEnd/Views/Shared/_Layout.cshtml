@using System.Reflection
@using System.Security.Claims
@using JetBrains.Annotations
@using Microsoft.AspNetCore.Html

@functions {

    private IHtmlContent MakeNavBarItem(
        string name, [AspMvcController] string controller, [AspMvcAction] string action, string iconClass)
    {
        var actionUrl = Url.Action(action, controller);
        var aTag = new TagBuilder("a")
        {
            Attributes =
            {
                ["href"] = actionUrl
            }
        };
        var iTag = new TagBuilder("i")
        {
            Attributes =
            {
                ["class"] = "fa " + iconClass,
                ["aria-hidden"] = "true"
            }
        };
        aTag.InnerHtml.AppendHtml(iTag)
            .Append(" " + name);
        var liTag = new TagBuilder("li");
        if (Context.Request.Path.StartsWithSegments(actionUrl))
            liTag.AddCssClass("active");
        liTag.InnerHtml.AppendHtml(aTag);
        return liTag;
    }
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MSV Autominer</title>
    <link rel="shortcut icon" href="~/favicon.ico" />

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
        <link rel="stylesheet" href="~/lib/codemirror/lib/codemirror.css">
        <link rel="stylesheet" href="~/css/animate.css">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
        <link rel="stylesheet" href="~/lib/codemirror/lib/codemirror.css">
        <link rel="stylesheet" href="~/css/animate.min.css">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>

</head>
<body>
    <div id="throbber" style="display: none">
        <img src="~/images/ajax-loader.gif" alt="Please wait..." />
    </div>
    @Html.Partial("_AlertPartial")
    @Html.Partial("_ConfirmPartial")

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                    <i class="glyphicon glyphicon-briefcase"></i> MSV Autominer
                </a>
            </div>
            <div class="navbar-collapse collapse">
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav" id="topNavBar">
                        @MakeNavBarItem("Home", "Home", "Index", "fa-home")
                        @MakeNavBarItem("Coins", "Coins", "Index", "fa-btc")
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-tasks"></i> Pools <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                @MakeNavBarItem("Pools", "Pools", "Index", "fa-tasks")
                                @MakeNavBarItem("Payments", "PoolPayments", "Index", "fa-money")
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-credit-card"></i> Wallets <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                @MakeNavBarItem("Wallets", "Wallets", "Index", "fa-credit-card")
                                @MakeNavBarItem("Operations", "WalletOperations", "Index", "fa-money")
                                <li role="separator" class="divider" />
                                @MakeNavBarItem("Exchange settings", "Exchanges", "Index", "fa-exchange")
                            </ul>
                        </li>
                        @MakeNavBarItem("Rigs", "Rigs", "Index", "fa-desktop")
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-wrench"></i> Tools <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                @MakeNavBarItem("Profitability estimation", "EstimateProfitability", "Index", "fa-usd")
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-tachometer"></i> Administration <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                @MakeNavBarItem("Logs", "Logs", "Index", "fa-file-text-o")
                            </ul>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>
    @{
        var versionString = $"v{Assembly.GetExecutingAssembly().GetName().Version}";
    }
    <div class="container body-content">
        @if (User.Identity.IsAuthenticated)
        {
            <div class="panel panel-default user-panel">
                <div class="panel-body row">
                    <div class="col-xs-9">
                        <span class="glyphicon glyphicon-user"></span> <b>@User.FindFirst(ClaimTypes.Name).Value</b>
                    </div>
                    <div class="col-xs-3">
                        <a asp-controller="Authentication" asp-action="Logout"
                           class="btn btn-xs btn-default" title="Logout">
                            <span class="glyphicon glyphicon-log-out"></span>
                        </a>
                    </div>
                </div>
            </div>
        }

        @RenderBody()
        <hr />
        <footer>
            <span class="pull-left">&copy; 2017-@DateTime.Today.Year - MSV</span>
            <span class="pull-right">@versionString</span>
        </footer>
    </div>

    <environment include="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/lib/remarkable-bootstrap-notify/dist/bootstrap-notify.min.js"></script>
        <script src="~/lib/jquery-serialize-object/jquery.serialize-object.js"></script>
        <script src="~/lib/codemirror/lib/codemirror.js"></script>
        <script src="~/lib/codemirror/mode/javascript/javascript.js"></script>
        <script src="~/lib/jquery.floatThead/dist/jquery.floatThead.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/lib/jquery-serialize-object/jquery.serialize-object.js"></script>
        <script src="~/lib/codemirror/lib/codemirror.js"></script>
        <script src="~/lib/codemirror/mode/javascript/javascript.js"></script>
        <script src="~/lib/jquery.floatThead/dist/jquery.floatThead.min.js"></script>
        <script src="~/lib/remarkable-bootstrap-notify/bootstrap-notify.js"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
