@model Msv.AutoMiner.FrontEnd.Models.Users.UserEditModel

@{ ViewBag.Title = "Edit user details"; }

<h2 class="text-center">Edit user details</h2>

<div class="text-danger" asp-validation-summary="All"></div>

<form asp-action="Save" method="post">
    <input asp-for="Id" />

    <div class="form-group">
        <label asp-for="Login">Login:</label>
        <input asp-for="Login" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Password:</label>
        <p class="small">Leave this field blank to keep the current password</p>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">
        <i class="glyphicon glyphicon-floppy-disk"></i> Save
    </button>
    <a class="btn btn-default" asp-action="Index">
        <i class="glyphicon glyphicon-chevron-left"></i> Return to users list
    </a>
</form>